<div class="form">
  <h1>New artist</h1>
  <form action="/artists" method="post">
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" name="name" required placeholder="Artist name"><br>
      <label>More info</label>
      <textarea type="text" class="form-control" name="bio" placeholder="Your artist bio here (optional)" rows="6"></textarea><br>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
