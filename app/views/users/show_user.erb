<div class="user">
  <h1>Your Account</h1>
  <p>Username: <%= @user.username %></p>
  <p>Email: <%= @user.email %></p>
  <p><a href="/users/<%=@user.id%>/edit">Edit your account</a></p>

  <h2>Your Artists</h2>
  <% @user.artists.each do |artist| %>
    <p><%= artist.name %> - <a href="/artists/<%= artist.slug %>">View</a> / <a href="/artists/<%= artist.slug %>/edit">Edit</a></p>
  <% end %>
    <p><a href="/artists/new">Add artist</a></p>
  <h2>Your Concerts</h2>
  <% @user.concerts.each do |concert| %>
    <p><%= concert.concert_date.strftime("%m/%d/%Y")%> - <%= concert.artist.name %> - <%= concert.location %> - <a href="/concerts/<%= concert.id %>">View</a> / <a href="/concerts/<%= concert.id %>/edit">Edit</a></p>
  <% end %>
  <p><a href="/concerts/new">Add concert</a></p>
</div>
